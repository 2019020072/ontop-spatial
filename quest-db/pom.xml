<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>obdalib-parent</artifactId>
    <groupId>inf.unibz.it.obda</groupId>
    <version>1.7-alpha</version>
    <relativePath>..</relativePath>
  </parent>
  <artifactId>quest-db</artifactId>
  
  
	<dependencies>
		<dependency>
			<groupId>inf.unibz.it.obda</groupId>
			<artifactId>obdalib-core</artifactId>
			<version>1.7-alpha</version>
		</dependency>
		<dependency>
			<groupId>inf.unibz.it.obda</groupId>
			<artifactId>obdalib-owlapi3</artifactId>
			<version>1.7-alpha</version>
		</dependency>

		<dependency>
			<groupId>inf.unibz.it.obda</groupId>
			<artifactId>reformulation-core</artifactId>
			<version>1.7-alpha</version>
		</dependency>
		
		<dependency>
			<groupId>inf.unibz.it.obda</groupId>
			<artifactId>quest-owlapi3</artifactId>
			<version>1.7-alpha</version>
		</dependency>
		
		<dependency>
			<!-- this includes ALL seasame -->
			<groupId>org.openrdf.sesame</groupId>
			<artifactId>sesame-runtime</artifactId>
		</dependency>

		<!-- These will download some of the sources -->
		<dependency>
			<groupId>org.openrdf.sesame</groupId>
			<artifactId>sesame-repository-api</artifactId>
		</dependency>
		

		<dependency>
			<groupId>net.sourceforge.owlapi</groupId>
			<artifactId>owlapi</artifactId>
			<version>3.2.3-r1824</version>
			<classifier>jar</classifier>
		</dependency>
		
		<dependency>
			<groupId>postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<type>jar</type>
		</dependency>
		
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					
					<testExcludes>
						<exclude>**/DirectStore*.java</exclude>
					</testExcludes>
					
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	
	<name>quest-db</name>
</project>