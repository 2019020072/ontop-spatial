<plugin>

	<!-- Datasource Manager Views -->
	
	<extension id="DatasourcesManagerViewComponent"
		point="org.protege.editor.core.application.ViewComponent">
		<label value="Datasource selector"></label>
		<class
			value="inf.unibz.it.obda.protege4.gui.view.DatasourcesManagerViewComponent">
		</class>
		<headerColor value="8C1717"/>
		<category value="OBDA"></category>
	</extension>
	
	<extension id="MappingsManagerViewComponent"
		point="org.protege.editor.core.application.ViewComponent">
		<label value="Mappings manager"></label>
		<class
			value="inf.unibz.it.obda.protege4.gui.view.MappingsManagerView">
		</class>
		<headerColor value="8C1717"/>
		<category value="OBDA"></category>
	</extension>
	
	<extension id="RDBMSInspectorViewComponent"
		point="org.protege.editor.core.application.ViewComponent">
		<label value="RDBMS source inspector"></label>
		<class
			value="inf.unibz.it.obda.protege4.gui.view.RDBMSInspectorView">
		</class>
		<headerColor value="8C1717"/>
		<category value="OBDA"></category>
	</extension>
	
	<extension id="SQLQueryInterfaceViewComponent"
		point="org.protege.editor.core.application.ViewComponent">
		<label value="RDBMS queries"></label>
		<class
			value="inf.unibz.it.obda.protege4.gui.view.SQLQueryInterfaceView">
		</class>
		<headerColor value="8C1717"/>
		<category value="OBDA"></category>
	</extension>
	
	
	
	<!-- Individuals queries views -->
	
	<extension id="QueryManagerViewComponent"
		point="org.protege.editor.core.application.ViewComponent">
		<label value="Query Manager"></label>
		<class
			value="inf.unibz.it.obda.protege4.gui.view.query.QueryManagerViewComponent">
		</class>
		<headerColor value="8C1717"/>
		<category value="ABox Query"></category>
	</extension>
	
	<extension id="QueryInterfaceViewComponent"
		point="org.protege.editor.core.application.ViewComponent">
		<label value="Individuals queries"></label>
		<class
			value="inf.unibz.it.obda.protege4.gui.view.query.QueryInterfaceViewComponent">
		</class>
		<headerColor value="8C1717"/>
		<category value="ABox Query"></category>
	</extension>
	
	
