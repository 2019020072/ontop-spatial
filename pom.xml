<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>inf.unibz.it.obda</groupId>
	<artifactId>obdalib-parent</artifactId>
	<packaging>pom</packaging>
	<version>1.0.2-SNAPSHOT</version>
	<name>obda-parent</name>
	<url>http://maven.apache.org</url>

	<modules>
		<module>obdalib-core</module>
		<module>obdalib-owlapi</module>
		<module>obdalib-protege4</module>
	</modules>

	<properties>
		<aversion>1.0.3-SNAPSHOT</aversion>
	</properties>


	<scm>
		<connection>scm:svn:https://babbage.inf.unibz.it/krdb/obda/obdalib/trunk/</connection>
		<developerConnection>scm:svn:https://babbage.inf.unibz.it/krdb/obda/obdalib/trunk/</developerConnection>
	</scm>


	<distributionManagement>
		<snapshotRepository>
			<id>bolzano-obda-snapshots</id>
			<name>Maven Bolzano OBDA snapshots repository</name>
			<url>http://obdavm.inf.unibz.it:8080/nexus/content/repositories/bolzano-obda-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<password>${release.password}</password>
					<username>${release.username}</username>
					<tagBase>scm:svn:http://hyper.dis.uniroma1.it/svn/quonto/tags</tagBase>
					<autoVersionSubmodules>true</autoVersionSubmodules>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
